FROM node:20-slim AS deps

WORKDIR /app

COPY package.json package-lock.json /app/
RUN npm ci

FROM node:20-slim AS builder

WORKDIR /app

ARG NEXT_PUBLIC_SITE_URL
ARG NEXT_PUBLIC_BOOKING_URL
ARG NEXT_PUBLIC_GA4_ID
ARG NEXT_PUBLIC_POSTHOG_KEY
ARG NEXT_PUBLIC_POSTHOG_HOST
ARG NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY
ARG NEXT_PUBLIC_STRIPE_MARKETING_LAUNCH_MONTHLY_PRICE_ID
ARG NEXT_PUBLIC_STRIPE_MARKETING_MOMENTUM_MONTHLY_PRICE_ID
ARG NEXT_PUBLIC_STRIPE_MARKETING_SCALE_MONTHLY_PRICE_ID
ARG NEXT_PUBLIC_STRIPE_WEB_DESIGN_STARTER_RENTAL_MONTHLY_PRICE_ID
ARG NEXT_PUBLIC_STRIPE_WEB_DESIGN_STARTER_RENTAL_ANNUAL_PRICE_ID
ARG NEXT_PUBLIC_STRIPE_WEB_DESIGN_GROWTH_RENTAL_MONTHLY_PRICE_ID
ARG NEXT_PUBLIC_STRIPE_WEB_DESIGN_GROWTH_RENTAL_ANNUAL_PRICE_ID
ARG NEXT_PUBLIC_STRIPE_WEB_DESIGN_STOREFRONT_RENTAL_MONTHLY_PRICE_ID
ARG NEXT_PUBLIC_STRIPE_WEB_DESIGN_STOREFRONT_RENTAL_ANNUAL_PRICE_ID
ARG NEXT_PUBLIC_STRIPE_WEB_DESIGN_PREMIUM_BUILD_PRICE_ID
ARG NEXT_PUBLIC_STRIPE_WEB_DESIGN_FLAGSHIP_BUILD_PRICE_ID
ARG NEXT_PUBLIC_TURNSTILE_SITE_KEY
ARG NEXT_PUBLIC_RATE_LIMIT_TOKEN

ENV NEXT_PUBLIC_SITE_URL=$NEXT_PUBLIC_SITE_URL
ENV NEXT_PUBLIC_BOOKING_URL=$NEXT_PUBLIC_BOOKING_URL
ENV NEXT_PUBLIC_GA4_ID=$NEXT_PUBLIC_GA4_ID
ENV NEXT_PUBLIC_POSTHOG_KEY=$NEXT_PUBLIC_POSTHOG_KEY
ENV NEXT_PUBLIC_POSTHOG_HOST=$NEXT_PUBLIC_POSTHOG_HOST
ENV NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=$NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY
ENV NEXT_PUBLIC_STRIPE_MARKETING_LAUNCH_MONTHLY_PRICE_ID=$NEXT_PUBLIC_STRIPE_MARKETING_LAUNCH_MONTHLY_PRICE_ID
ENV NEXT_PUBLIC_STRIPE_MARKETING_MOMENTUM_MONTHLY_PRICE_ID=$NEXT_PUBLIC_STRIPE_MARKETING_MOMENTUM_MONTHLY_PRICE_ID
ENV NEXT_PUBLIC_STRIPE_MARKETING_SCALE_MONTHLY_PRICE_ID=$NEXT_PUBLIC_STRIPE_MARKETING_SCALE_MONTHLY_PRICE_ID
ENV NEXT_PUBLIC_STRIPE_WEB_DESIGN_STARTER_RENTAL_MONTHLY_PRICE_ID=$NEXT_PUBLIC_STRIPE_WEB_DESIGN_STARTER_RENTAL_MONTHLY_PRICE_ID
ENV NEXT_PUBLIC_STRIPE_WEB_DESIGN_STARTER_RENTAL_ANNUAL_PRICE_ID=$NEXT_PUBLIC_STRIPE_WEB_DESIGN_STARTER_RENTAL_ANNUAL_PRICE_ID
ENV NEXT_PUBLIC_STRIPE_WEB_DESIGN_GROWTH_RENTAL_MONTHLY_PRICE_ID=$NEXT_PUBLIC_STRIPE_WEB_DESIGN_GROWTH_RENTAL_MONTHLY_PRICE_ID
ENV NEXT_PUBLIC_STRIPE_WEB_DESIGN_GROWTH_RENTAL_ANNUAL_PRICE_ID=$NEXT_PUBLIC_STRIPE_WEB_DESIGN_GROWTH_RENTAL_ANNUAL_PRICE_ID
ENV NEXT_PUBLIC_STRIPE_WEB_DESIGN_STOREFRONT_RENTAL_MONTHLY_PRICE_ID=$NEXT_PUBLIC_STRIPE_WEB_DESIGN_STOREFRONT_RENTAL_MONTHLY_PRICE_ID
ENV NEXT_PUBLIC_STRIPE_WEB_DESIGN_STOREFRONT_RENTAL_ANNUAL_PRICE_ID=$NEXT_PUBLIC_STRIPE_WEB_DESIGN_STOREFRONT_RENTAL_ANNUAL_PRICE_ID
ENV NEXT_PUBLIC_STRIPE_WEB_DESIGN_PREMIUM_BUILD_PRICE_ID=$NEXT_PUBLIC_STRIPE_WEB_DESIGN_PREMIUM_BUILD_PRICE_ID
ENV NEXT_PUBLIC_STRIPE_WEB_DESIGN_FLAGSHIP_BUILD_PRICE_ID=$NEXT_PUBLIC_STRIPE_WEB_DESIGN_FLAGSHIP_BUILD_PRICE_ID
ENV NEXT_PUBLIC_TURNSTILE_SITE_KEY=$NEXT_PUBLIC_TURNSTILE_SITE_KEY
ENV NEXT_PUBLIC_RATE_LIMIT_TOKEN=$NEXT_PUBLIC_RATE_LIMIT_TOKEN

COPY --from=deps /app/node_modules /app/node_modules
COPY . /app

RUN npm run build

FROM node:20-slim AS runner

WORKDIR /app

ENV NODE_ENV=production

COPY --from=builder /app/package.json /app/package-lock.json /app/
COPY --from=builder /app/node_modules /app/node_modules
COPY --from=builder /app/next.config.ts /app/next.config.ts
COPY --from=builder /app/public /app/public
COPY --from=builder /app/.next /app/.next

EXPOSE 3001

CMD ["npm", "run", "start", "--", "-p", "3001", "-H", "0.0.0.0"]
